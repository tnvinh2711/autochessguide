<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main"
    android:overScrollMode="never"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_units_full"
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:src="@drawable/alchemist_f" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcv_mini"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/iv_units_full"
                    android:layout_centerHorizontal="true">
                </androidx.recyclerview.widget.RecyclerView>
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="16dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stats"
                    android:textColor="@color/text_search_box"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="#D1D1DB" />

                <TextView
                    android:id="@+id/tv_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Cost: 3"
                    android:textColor="@color/text_search_box"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_heart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Heart: 600 / 1200 / 2400"
                    android:textColor="@color/text_search_box"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_armor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Armor: 10"
                    android:textColor="@color/text_search_box"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_magical_resistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Magical Resistance: 0%"
                    android:textColor="@color/text_search_box"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_atk_dame"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Attack Damage: 52 / 105 / 210"
                    android:textColor="@color/text_search_box"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_atk_speed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Attack Speed: 1.4"
                    android:textColor="@color/text_search_box"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_atk_range"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Attack Range: 1"
                    android:textColor="@color/text_search_box"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Abilities"
                android:textColor="@color/text_search_box"
                android:textSize="16sp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="#D1D1DB" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_skill"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/border_background"
                    android:padding="5dp"
                    android:src="@drawable/sand_king_s" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_name_skill"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Burrow Dash"
                        android:textColor="@color/text_search_box"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_status_skill"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Active"
                        android:textColor="@color/text_search_box"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_des_skill"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Dash to the farthest enemy on the board, damaging and stunning enemies along the path."
                        android:textColor="@color/text_search_box"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_tag_skill"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:lineSpacingExtra="5dp"
                        android:text="Cooldown: 10 / 8 / 6"
                        android:textColor="@color/text_search_box"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rcv_detail_unit"
                android:nestedScrollingEnabled="false">
            </androidx.recyclerview.widget.RecyclerView>

        </LinearLayout>
    </LinearLayout>
</ScrollView>