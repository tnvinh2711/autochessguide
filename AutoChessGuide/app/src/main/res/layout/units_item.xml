<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp">
    <RelativeLayout
        android:layout_width="110dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="8dp"
            android:padding="5dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/a1"
            android:id="@+id/iv_icon_unit"
            android:background="@drawable/border_background_buff"/>
        <TextView
            android:layout_width="50dp"
            android:layout_height="16dp"
            android:text="NERFED"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:id="@+id/tv_stat"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:background="@drawable/background_buff"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/newu"
            android:id="@+id/img_new"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="2dp"
            android:visibility="gone"
            android:src="@mipmap/up"
            android:background="@drawable/circle_background"
            android:id="@+id/img_tier"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal">
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:id="@+id/iv_icon1"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"/>
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:id="@+id/iv_icon2"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="5dp"/>
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:id="@+id/iv_icon3"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="5dp" />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="1"
        android:ellipsize="end"
        android:textSize="12sp"
        android:textColor="@android:color/white"
        android:id="@+id/tv_name"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="1"
        android:textSize="12sp"
        android:ellipsize="end"
        android:textColor="@android:color/white"
        android:id="@+id/tv_name_dota"
        android:layout_gravity="center_horizontal"/>
</LinearLayout>